<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shop.mapper.ProductMapper">

    <resultMap id="ProductWithCategory" type="com.shop.model.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="categoryId" column="category_id"/>
        <result property="price" column="price"/>
        <result property="originalPrice" column="original_price"/>
        <result property="stock" column="stock"/>
        <result property="soldCount" column="sold_count"/>
        <result property="imageUrl" column="image_url"/>
        <result property="images" column="images"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <association property="category" javaType="com.shop.model.Category">
            <id property="id" column="cat_id"/>
            <result property="name" column="cat_name"/>
            <result property="icon" column="cat_icon"/>
        </association>
    </resultMap>

    <select id="findAll" resultMap="ProductWithCategory">
        SELECT p.*, 
               c.id as cat_id, c.name as cat_name, c.icon as cat_icon
        FROM products p
        LEFT JOIN categories c ON p.category_id = c.id
        WHERE 1=1
        <if test="search != null and search != ''">
            AND (p.name LIKE CONCAT('%', #{search}, '%')
            OR p.description LIKE CONCAT('%', #{search}, '%'))
        </if>
        <if test="categoryId != null">
            AND p.category_id = #{categoryId}
        </if>
        <if test="status != null and status != ''">
            AND p.status = #{status}
        </if>
        ORDER BY p.created_at DESC
    </select>

</mapper>
